


<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "Nouveau document", new_course_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Matière</th>
      <th>Fac</th>
      <th>Année</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.titre %></td>
        <td><%= course.matiere %></td>
        <td><%= course.fac %></td>
        <td><%= course.annee %></td>

        <td><%= link_to "Download Course", course.pdf_url %></td>
        <td><%= button_to "Delete",  course, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{course.pdf_url}?" %></td>
      </tr>
      
<% end -%>
  
  </tbody>
</table>





